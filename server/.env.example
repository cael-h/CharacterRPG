PORT=4000

# BYOK only. Keys are provided per-request by clients. These are optional for local testing.
OPENAI_API_KEY=
GOOGLE_API_KEY=

# Defaults for Gemini
GEMINI_MODEL=gemini-2.5-flash

# Storage paths
UPLOADS_DIR=uploads
TRANSCRIPTS_DIR=transcripts
MEMORIES_DIR=memories
TIMELINES_DIR=timelines
USAGE_DIR=usage

# Local openâ€‘source provider (Ollama)
# Change base if your Ollama runs remotely.
OLLAMA_BASE=http://localhost:11434
# Optional default model when none is supplied
OLLAMA_MODEL=llama3.1:8b-instruct-q4_K_M
# Strip DeepSeek-style <think> blocks before JSON parsing (true|false)
OLLAMA_STRIP_THINK=true

# Profiles and seeds
PROFILES_DIR=profiles
SEEDS_DIR=seeds

# Auto-mirror character bundles under profiles/<id>/ (prompt, timeline, memories, transcripts)
SYNC_CHARACTER_BUNDLES=true

# Reviewer defaults
REVIEWER_PROVIDER=openai
REVIEWER_MODEL=gpt-5-mini

# OpenAI
OPENAI_BASE=https://api.openai.com
DEFAULT_OPENAI_MODEL=gpt-5-nano
